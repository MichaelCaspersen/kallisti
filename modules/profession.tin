#alias highlight_materials_off {
	#unhighlight {junk {hide|bone|meat}};
	#unhighlight {rough {hide|bone|meat}};
	#unhighlight {average {hide|bone|meat}};
	#unhighlight {good {hide|bone|meat}};
	#unhighlight {excellent {hide|bone|meat}};
