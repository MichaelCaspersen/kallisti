#alias profroom {#var clearingroom 1;#var room_corpse_id 0;$profession[str_corpse] corpse}
#action {It isn't quality enough to {skin|extract|butcher}} {#if {$clearingroom==1} {#math room_corpse_id {$room_corpse_id+1};show_debug {<Next corpse: $room_corpse_id >};$profession[str_corpse] $room_corpse_id.corpse;}}
#action {You {skin|extract|butcher} it but you make a mess of it.} {#if {$clearingroom==1} {#math room_corpse_id {$room_corpse_id+1};show_debug {<Next corpse: $room_corpse_id >};$profession[str_corpse] $room_corpse_id.corpse;}}
#action {You can't {skin|extract|butcher} a corpse from %1.} {#if {$clearingroom==1} {#math room_corpse_id {$room_corpse_id+1};show_debug {<Next corpse: $room_corpse_id >};$profession[str_corpse] $room_corpse_id.corpse;}}
#action {You must also specify what you want to {skin|extract|butcher}.} {#var clearingroom 0}



#alias {do_gather} {
	show_debug {<157><<< $profession[gather][type] ? >>%0<<   , in list: &zone[proflist]["%0"] >>>};
	#if { $profession[gather][auto] } {
		#if { $profession[gather][all] } {
			queueAdd any { $profession[str_corpse] corpse};
		};#else {
			#if { &zone[proflist]["%0"]>0 } {
				queueAdd any { $profession[str_corpse] corpse };
			}
		}
	}
}

#ACTION {You {skin|extract|butcher} some %2 {hide|bone|meat} from} {
	show_debug {<157>GATHERED <%1> <%2> <%3> <%4>};
	#math profession[gather][total] {$profession[gather][total]+1};
	#switch {"%2"} {
		#case {"junk"} { sac %3 };
		#case {"rough"} { sac %3 };
		#default {
			#if { "$profession[gather][receiver]"=="" } {
				donate %3 home;
			};
			#else {
				give %3 $profession[gather][receiver];
			};
			#math profession[gather][success] {$profession[gather][success]+1}
		}
	};
	generate_profession_info;
	#if {$clearingroom==1} {
		#math room_corpse_id {$room_corpse_id+1};
		$profession[str_corpse] $room_corpse_id.corpse;
	}
}

#action {%1 gives you some %2 {hide|bone|meat} from %4.} {
	show_debug {<157>GAVE ME <%1> <%2> <%3> <%4>};
	#switch {"%2"} {
		#case {"junk"} { sac %3 };
		#case {"rough"} { sac %3 };
		#default {
			donate %3 home;
			#math profession[gather][success] {$profession[gather][success]+1}
		};
	};
	generate_profession_info;
}

#action {You {get|palm} some %2 {hide|meat} from %4.} {
	show_debug {<157>GET/PALM HIDE <%1> <%2> <%3> <%4>};
	#switch {"%2"} {
		#case {"junk"} { sac %3 };
		#case {"rough"} { sac %3 };
		#default {
			donate %3 home;
		};
	};l
}

