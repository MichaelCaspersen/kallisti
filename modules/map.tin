#alias createExit {
	#map get {roomexits} {EXIT_LIST};
	#if { ($EXIT_LIST[@dA{$prevdir}]>0) && ("$MSDP_ROOM_EXITS[$prevdir]" == "?") } 
	{ 
		#nop LINK ALREADY EXITS; 
	} {
		#nop NO EXIT EXISTS, CREATE IT;
		#map link @dA{$prevdir} $old_vnum both;
	}
}

